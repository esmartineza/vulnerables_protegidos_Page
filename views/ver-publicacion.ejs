<div class="card-fondo">
    <div class="card-header">
      <h1><%= publicaciones.titulo %></h1>
    </div>
    <div class="card-body">
      <img class="img-public" src="/uploads/publicaciones/<%= publicaciones.imagen %>" alt="<%= publicaciones.titulo %>">
    </div>
    <div class="texto-imagen-contenedor">
        <h2 class="titulo-descripcion">Descripcion</h2>
      <p class="texto-imagen" > <%- publicaciones.descripcion %></p>
    </div>
    <div class="card-footer">
        <div class="fecha-evento">
            <h2 class="titulo-evento">Fecha Evento</h2>
          <% moment.locale('es') %>
          <p class="fechatext"><%= moment(publicaciones.fecha).format('LL'); %></p>
        </div>
        <div class="direccion-evento">
          <h2 class="direccion-titulo">Direcci√≥n</h2>
          <p class="direcciontext"><%= publicaciones.direccion %></p>
        </div>
    </div>
  </div>
  