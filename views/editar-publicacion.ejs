<main class="contenedor-formularios">

    <form class="default-form" method="POST">
        <h1 class="titulos"><%- nombrePagina %></h1>
        <div class="form-group">
            <label for="postId">Categoria Relacionada</label>
            <select name="postId" id="postId"  class="input select">
                <option value="" disabled selected>-- Seleccionar Categoria --</option>
                <% if (post.length > 0) { %>
                    <% post.forEach(post => { %>
                        <option <%= (publicaciones.postId === post.id) ? 'selected' : '' %> value="<%= post.id %>"><%= post.nombrepost %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="titulo">Titulo del Post</label>
            <input class="input" type="text" name="titulo" id="titulo" value="<%= publicaciones.titulo  %>" required>
        </div>
        <div class="form-group">
            <label for="invitado">Invitado</label>
            <input class="input" type="text" name="invitado" id="invitado" placeholder="Nombre Invitado (Cantante, Animador etc)" value="<%= publicaciones.invitado  %>" >
        </div>
        <div class="columnas-2 grid">
            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input class="input" type="date" name="fecha" id="fecha" value="<%= publicaciones.fecha  %>" required>
            </div>
            <div class="form-group">
                <label for="hora">Hora</label>
                <input class="input" type="time" name="hora" id="hora" value="<%= publicaciones.hora  %>" required>
            </div>
        </div>
        <div class="form-group descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= publicaciones.descripcion  %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="form-group buscador">
            <div class="form-group">
                <label for="formbuscador">Coloca la Dirección del Evento</label>
                <input class="input" type="text" id="formbuscador" placeholder="Ingresar la ubicación"  value="<%= publicaciones.direccion  %>" required>
                <b><small>Ingresar una dirección estimada</small></b>
            </div>
        </div>
        <div class="mapa">
            <div id="map" ></div>
            <b><p>Mueve el punto al lugar donde quiera establecer la dirección</p></b>
        </div>
        <div>
            <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        </div>
        <div class="form-group">
            <label for="direccion">Dirección</label>
            <input class="input" type="text" id="direccion" name="direccion" placeholder="Dirección"  value="<%= publicaciones.direccion  %>" required>
        </div>
        <div class="form-group">
            <label for="ciudad">Ciudad</label>
            <input class="input" type="text" id="ciudad" name="ciudad" placeholder="Ciudad" value="<%= publicaciones.ciudad  %>" required>
        </div>
        <div class="form-group">
            <label for="region">Región</label>
            <input class="input" id="region" name="region" placeholder="Región" value="<%= publicaciones.region  %>" required>
        </div>
        <input type="hidden" id="lat" name="lat">
        <input type="hidden" id="lng" name="lng">
        <br>
        <div class="form-group enviar">
            <input type="submit" class="button is-success" value="Guardar Cambios">
        </div>
    </form>
</main>
