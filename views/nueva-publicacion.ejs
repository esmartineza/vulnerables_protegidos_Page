<main class="contenedor-formularios">

    <form class="default-form" action="/nueva-publicacion" method="POST" enctype="multipart/form-data">
        <h1 class="titulos"><%- nombrePagina %></h1>
        <div class="form-group">
            <label for="postId">Categoria Relacionado</label>
            <select name="postId" id="postId" class="input select">
                <option value="" disabled>-- Seleccionar Categoria --</option>
                <% post.forEach(post => { %>
                    <option value="<%= post.id %>" <% if (post.id == selectedPostId) { %>selected<% } %>><%= post.nombrepost %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="titulo">Titulo de la publicación</label>
            <input class="input" type="text" name="titulo" id="titulo" placeholder="Titulo de la publicación" required>
        </div>

        <div class="form-group">
            <label for="invitado">Invitado</label>
            <input class="input" type="text" name="invitado" id="invitado" placeholder="Nombre Invitado (Cantante, Animador etc)">
        </div>
        <div class="columnas-2 grid">
            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input class="input" type="date" name="fecha" id="fecha" placeholder="Nombre Invitado o Ponente (si aplica)" required>
            </div>
            <div class="form-group">
                <label for="hora">Hora</label>
                <input class="input" type="time" name="hora" id="hora" placeholder="Hora publicación" required>
            </div>
        </div>
        <div class="form-group descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="form-group buscador">
            <div class="form-group">
                <label for="formbuscador">Coloca la Dirección del Evento</label>
                <input class="input" type="text" id="formbuscador" placeholder="Ingresar la ubicación" required>
                <b><small>Ingresar una dirección estimada</small></b>
            </div>
        </div>
        <div class="mapa">
            <div id="map" ></div>
            <b><p>Mueve el punto al lugar donde quiera establecer la dirección</p></b>
        </div>
        <div>
            <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        </div>
        <div class="form-group">
            <label for="direccion">Dirección</label>
            <input class="input" type="text" id="direccion" name="direccion" placeholder="Dirección" required>
        </div>
        <div class="form-group">
            <label for="ciudad">Ciudad</label>
            <input class="input" type="text" id="ciudad" name="ciudad" placeholder="Ciudad" required>
        </div>
        <div class="form-group">
            <label for="region">Región</label>
            <input class="input" id="region" name="region" placeholder="Región" required>
        </div>
        <input type="hidden" id="lat" name="lat">
        <input type="hidden" id="lng" name="lng">
        <br>
        <div>
            <label class="contenedor-txt img">Imagen para la publicación</label>
        </div>
          <div class="file has-name">
            <div class="file has-name">
              <span class="file-cta">
                <input type="file" name="imagen" required>
              </span>
          </div>
          </div>
        <div class="form-group enviar">
            <input type="submit" class="custom-createcategoria btn-color-crecate" value="Crear Publicación">
        </div>
    </form>
</main>
